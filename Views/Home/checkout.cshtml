<script>
	$(document).ready(function () {
	
	    $('#b1').click( function () {
	        
		    $.getJSON("/Home/CheckLogin", function (data) {
		    
			    if (data) {
			        $('#result').text("Order successful");
			        alert("Order successful!")
			    }
			    else {
			        $('#result').text("Login to order!");
			        alert("Log in to order!");
			    }
		    });
	    });
	});
</script>	
